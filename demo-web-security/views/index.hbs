<div class="container">
    <form action="/" method="get">
        <div class="mb-3">
            <label for="keyword" class="form-label">Product Search</label>
            <input type="text" class="form-control" name="keyword" id="keyword" placeholder="Enter your keyword"
                required>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>
{{#if keyword}}
<div class="container my-3">
    <h2>Search results for "{{{keyword}}}":</h2>
    <div class="row">
        <div class="col-md-12">
            <!-- Hover added -->
            <section style="background-color: #eee;">
                <div class="text-center container py-3">
                    <div class="row">
                        {{#each products}}
                        <div class="col-lg-3 col-md-12 mb-4">
                            <div class="card h-100">
                                <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                                    data-mdb-ripple-color="light">
                                    <a href="/products/{{id}}">
                                        <img src="{{imagePath}}" class="w-100" />
                                    </a>
                                </div>
                                <div class="card-body">
                                    <a href="/products/{{id}}" class="text-reset">
                                        <h5 class="card-title mb-3">{{name}}</h5>
                                    </a>
                                    <h6 class="mb-3">${{price}}</h6>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{{/if}}